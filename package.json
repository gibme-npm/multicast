{
  "name": "@gibme/multicast",
  "version": "0.0.1",
  "description": "A simple multicast helper",
  "main": "./dist/index.js",
  "types": "./dist/index.ts",
  "files": [
    "dist/*"
  ],
  "license": "MIT",
  "scripts": {
    "build": "yarn build:typescript",
    "build:docs": "./node_modules/.bin/typedoc",
    "build:typescript": "./node_modules/.bin/tsc",
    "test": "yarn test:style && yarn test:typecheck && yarn test:mocha",
    "test:mocha": "./node_modules/.bin/mocha --exit --timeout 30000 --require ts-node/register test/test.ts",
    "test:typecheck": "./node_modules/.bin/tsc --noEmit",
    "test:style": "yarn style",
    "style": "./node_modules/.bin/eslint src/**/*.ts test/**/*.ts",
    "fix-style": "./node_modules/.bin/eslint --fix src/**/*.ts test/**/*.ts",
    "fix:style": "yarn fix-style",
    "prepublishOnly": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gibme-npm/multicast.git"
  },
  "bugs": {
    "url": "https://github.com/gibme-npm/multicast/issues"
  },
  "homepage": "https://gibme-npm.github.io/multicast/",
  "engines": {
    "node": ">=18"
  },
  "engineStrict": true,
  "author": {
    "name": "Brandon Lehmann",
    "email": "brandonlehmann@gmail.com"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^11.0.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.7",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "ip-address": "^10.0.1"
  }
}
